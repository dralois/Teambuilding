.background {
    flex-grow: 1;
    align-items: center;
    justify-content: center;
    background-color: rgb(162, 175, 184);
}

.unity-text-field__label {
    visibility: visible;
    overflow: hidden;
    display: none;
}

.unity-text-field__input {
    background-color: rgba(0, 0, 0, 0);
    border-left-color: rgba(255, 255, 255, 0);
    border-right-color: rgba(255, 255, 255, 0);
    border-top-color: rgba(255, 255, 255, 0);
    border-bottom-color: rgba(255, 255, 255, 0);
    font-size: 100%;
    color: rgb(255, 255, 255);
    -unity-font-style: bold;
}

.input_style {
    left: ;
    color: rgb(162, 176, 184);
    border-left-color: rgb(255, 255, 255);
    border-right-color: rgb(255, 255, 255);
    border-top-color: rgb(255, 255, 255);
    border-bottom-color: rgb(255, 255, 255);
    border-bottom-width: 4px;
    justify-content: center;
    width: 200px;
    margin-bottom: 10px;
    margin-top: 10px;
    font-size: 150%;
}

.button_standart {
    width: 200px;
    border-top-left-radius: 15px;
    border-bottom-left-radius: 15px;
    border-top-right-radius: 15px;
    border-bottom-right-radius: 15px;
    font-size: 150%;
    height: 35px;
    color: rgba(255, 255, 255, 255);
    -unity-font-style: bold;
    background-color: rgba(128, 128, 128, 255);
    border-left-width: 4px;
    border-right-width: 4px;
    border-top-width: 4px;
    border-bottom-width: 4px;
    border-left-color: rgb(128, 128, 128);
    border-right-color: rgb(128, 128, 128);
    border-top-color: rgb(128, 128, 128);
    border-bottom-color: rgb(128, 128, 128);
}

.button_standart:hover {
    border-left-color: rgba(255, 255, 255, 255);
    border-right-color: rgba(255, 255, 255, 255);
    border-top-color: rgba(255, 255, 255, 255);
    border-bottom-color: rgba(255, 255, 255, 255);
}

.button_standart:active {
    border-left-color: rgba(255, 255, 255, 255);
    border-right-color: rgba(255, 255, 255, 255);
    border-top-color: rgba(255, 255, 255, 255);
    border-bottom-color: rgba(255, 255, 255, 255);
    background-color: rgba(184, 254, 1, 255);
    color: rgba(0, 0, 0, 255);
}
