.unity-text-field__label {
    display: none;
    visibility: hidden;
}

.unity-text-field__input {
    background-color: rgba(0, 0, 0, 0);
    border-left-color: rgba(168, 168, 168, 255);
    border-right-color: rgba(168, 168, 168, 255);
    border-top-color: rgba(168, 168, 168, 255);
    border-bottom-color: rgba(168, 168, 168, 255);
    border-left-width: 0;
    border-right-width: 0;
    border-top-width: 0;
    border-bottom-width: 80px;
}
